{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "noImplicitAny": true, /*어떤 유형도 가질 수 없습니다*/
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true, /*정의가 사용되지 않을 때 프롬프트가 표시됩니다.*/
    "noUnusedParameters": true, /*함수에서 사용하지 않는 변수 확인*/
    "noImplicitReturns": true, /*함수에 반환 값이 있는지 확인*/
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "paths": { /*별칭정의*/
      "@src/*": [
        "src/*"
      ]
    },
    "typeRoots": [ /*유형 선언 파일*/
      "./types",
      "./node_modules/@types"
    ]  
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
